
public class CountInversions {

	public static void main(String[] args) {
		int[] ar = {2, 3, 5, 4, 9, 8};//, 7, 6, 0, 1};
		System.out.println(getInvCount(ar, ar.length));
	}
	
	public static int getInvCount(int arr[], int n)
	{
	  int inv_count = 0;
	  int i, j;
	 
	  for(i = 0; i < n - 1; i++)
	    for(j = i+1; j < n; j++)
	      if(arr[i] > arr[j])
	        inv_count++;
	 
	  return inv_count;
	}
	
}
