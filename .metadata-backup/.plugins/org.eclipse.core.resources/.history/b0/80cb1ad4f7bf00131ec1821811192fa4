
public class InorderSuccessorBST {

	public static void main(String[] args) {
		BNode root = new BNode(20);
		root.left = new BNode(8);
		root.right = new BNode(22);
		
		root.left.left = new BNode(4);
		root.left.right = new BNode(12);
		root.left.right.left = new BNode(10);
		root.left.right.right = new BNode(14);
	}
	
	public static BNode getInorderSuccessor(BNode root, int data){
		if(root == null)
			return null;
		
		if(data == root.data){
			BNode temp = root.right;
			if (temp == null){
				return root;
			}
			else { 
				while (temp != null){
					temp = temp.left;
				}
			}
			
			return temp;
		}
		if (data < root.data){
			BNode parent = root;
			BNode current = root.left;
			while(data < current.data){
				parent = current;
				current = current.left;
			}
			
			BNode temp = parent;
			if (temp.right == null){
				return temp;
			}
			else {
				temp = temp.right;
				while (temp.left != null){			
					temp = temp.left;
				}	
			}			
			return temp;
			
		/*	
		}else {
			
			BNode parent = root;
			BNode current = root.right;
			while(data > current.data){
				parent = current;
				current = current.right;
			}
			
			BNode temp = current.right;
			if (temp == null){
				return root;
			}
			else if (temp != null){
				temp = temp.left;
			}			
			return temp;
			
			
		}*/
	}
	
}
