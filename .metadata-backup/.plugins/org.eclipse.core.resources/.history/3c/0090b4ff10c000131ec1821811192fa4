
public class LevelOfNode {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	public static int levelOfNode (BNode root, BNode node, int level){
		
		
		if (root.data == node.data)
			return level;
		
		if(root.data != node.data && root.left == null && root.right == null)
			return -1;
		
		if(root.left != null){
			int tempLeft = levelOfNode(root.left, node, level+1);
			if(tempLeft != -1)
				return tempLeft;
	    }
		
		return levelOfNode(root.right, node, level+1);

}
	
}	
