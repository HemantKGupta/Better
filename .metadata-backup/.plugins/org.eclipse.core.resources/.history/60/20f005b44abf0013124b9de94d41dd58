import java.util.Arrays;


public class BuildTreeInPost {

	public static void main(String[] args) {
		

	}
	public static int[] buildTreeFromInPost(int[] in, int[] post){
		int inLength = in.length;
		int postLength = post.length;
		int rootData = post[post.length-1];
		BNode root = new BNode(rootData);
		int rootIndexIn = Arrays.binarySearch(in, rootData);
		buildtree(root, in, post, 0, inLength-1, 0,postLength-1);
		
	}
	
	public static buildTree(BNode root, int[] in, int[] post, int inStart, int inEnd, int postStart, int postEnd){
		
		int rootData = post[postEnd];
		BNode temp = new BNode(rootData);
		int rootIndexIn = Arrays.binarySearch(in, rootData);
		
		buildtree(root.left, in, inStart, rootIndexIn-1, postStart,postEnd);
		buildtree(root.right, in, rootIndexIn+1, inEnd, postStart,postEnd);
	}

}
