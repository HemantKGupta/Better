
public class MyHeapSort {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	public void sink(int[] arr, int i, int heapsize){
		int left = 2*i+1;
		int right = 2*i+2;
		int largest = i;
		if(left < heapsize && arr[left] > arr[i])
			largest = left;
		
		if(right < heapsize && arr[right] > largest)
			largest = right;
		
		
		
		
	}

}
