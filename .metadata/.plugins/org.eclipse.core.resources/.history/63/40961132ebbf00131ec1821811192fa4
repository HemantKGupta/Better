import java.util.Arrays;


public class WidthOfTree {

	public static void main(String[] args) {
		BNode root = new BNode(10);
		root.left = new BNode(9);
		root.right = new BNode(2);
		root.left.left = new BNode(7);
		root.left.right = new BNode(6);
		root.left.left.left = new BNode(5);
		root.left.right.right = new BNode(4);
		widthOfTree(root);
	}
	
	
	
	public static void widthOfTree(BNode root){
		 int h = height(root);
		 int[] widthOfLevel = new int[h+1]; 
		 for (int i = 1; i <= h; i++){
			 System.out.println("\nThe level "+ i+ " is : ");
			 widthOfLevel[i]+= widthOfGivenLevel(root, i);
		 }
		 System.out.println(Arrays.toString(widthOfLevel));
	}
	

	/* Print nodes at a given level */
	private static int widthOfGivenLevel(BNode root, int level) {
		if (root == null)
			return 0;
		if (level == 1)
			return 1;
		else if (level > 1) {
			widthOfGivenLevel(root.left, level - 1);
			widthOfGivenLevel(root.right, level - 1);
		}
		return 0;
	}
	
	/* Function to calculate height of a tree */
	public static int height(BNode root) {

		if (root == null) {
			return 0;
		}
		int lheight = height(root.left);
		int rheight = height(root.right);
		if (lheight > rheight) {
			return lheight + 1;
		} else
			return rheight + 1;
	}

}
