
public class PassingCars {

	public static void main(String[] args) {
		int[] A = {0,1,0,1,1};
		System.out.println(solution(A));
	}
	
	public static int solution(int[] A) {
		int n = A.length;
		int result = 0;
		int zeros = 0;
		int ones = 0;
		if(A[0]== 0){
			zeros++;
		}else{
			ones++;
		}
		for (int i = 2; i < n ; i++) {
			int current = A[i];
			int previous = A[i-1];
				if(current == 0){
					result = result + ones;
				}else {
					result = result + zeros;
				}				
				if (previous != current){
					result++;
				}
				if (previous == 0){
					zeros++;
				}else{
					ones++;
				}
				
			}		
		
		return result;
    }

}
