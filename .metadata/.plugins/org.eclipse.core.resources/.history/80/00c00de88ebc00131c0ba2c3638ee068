import java.util.Arrays;

public class CountSort {

	public static void main(String[] args) {
		int[] arr = { 3, 1, 2, 1, 0 };
		System.out.println("\nAfter sorting elemnets are: ");
		printArray(countSort(arr));
	}

	public static int[] countSort(int[] arrs) {
		
		int[] output = new int[arrs.length];
		int[] count = new int[6];
		int i;
		for (i = 0; i < arrs.length; ++i) {
			++count[arrs[i]];
		}

		for (i = 1; i <= 5; ++i)
			count[i] += count[i - 1];
		System.out.println("Cumm array is: "+Arrays.toString(count));

		/*int j = 0;
		for (i = 0; i < arrs.length; i++)
			while (j < count[i])
				output[j++] = i;*/
		
		for (i = 0; i< arrs.length; ++i)
	    {
	        System.out.println("arrs[i] is: "+ arrs[i]);
	        int temp = count[arrs[i]]-1;
	        System.out.println("count[arrs[i]]-1 is: "+ temp);
			output[temp] = arrs[i];
	        --count[arrs[i]];
	    }

		for (i = 0; i < arrs.length; ++i)
			arrs[i] = output[i];

		return output;
	}

	public static void printArray(int[] arr) {
		for (int i = 0; i < arr.length; i++) {
			System.out.print(arr[i]+" ");
		}
		System.out.println();
	}

}
