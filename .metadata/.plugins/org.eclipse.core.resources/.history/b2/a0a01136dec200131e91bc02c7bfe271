
public class Fish {

	public static void main(String[] args) {
		int[] A = {4,3,2,1,5};
		int[] B = {0,1,0,0,0};
		System.out.println(solution(A,B));
		
	}
	public static int solution(int[] A, int[] B) {
		int len = B.length;
		if(len == 1){
			return 1;
		}else if (len==2){
			if (B[0]==1 && B[1]==0){
				return 1;
			}else if (B[0]==B[1]){
				return 2;
			}
		}
		boolean[] isAlive = new boolean[len];
		int i = 0;
		
		System.out.println("first index is i:"+ i);
		if (i != len -1){
			int currentSize = A[i];
			int currentIndex = i;
				for (int j = i+1; j < len; j++) {
					if (B[j]==0){
						if(currentSize < A[j]){
							isAlive[currentIndex]= false;
							currentIndex = j;
						}else if(currentSize > A[j]){
							isAlive[j]= false;						
						}
					} else if (B[j]==1) {
						currentSize = A[j];
						currentIndex = j;
					}
				}			
			
			int countAlive = 0;
			for (int k = 0; k < len; k++) {
				if(isAlive[k]==true)
					countAlive++;
				
			}
			return countAlive;
		}else {
			return i;
		}
		
	}
	public static int getNexIndexWithUpdate(int[] B, boolean[] isAlive, int start){
		int result = -1;
		for (int i = start; i < B.length; i++) {
			if(B[i]!= 1){
				isAlive[i]= true;
			} else {
				isAlive[i]= true;
				result = i;
				break;
			}	
		}
		return result;
		
	}

}
