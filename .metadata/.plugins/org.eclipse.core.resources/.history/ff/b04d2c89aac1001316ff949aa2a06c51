public class MinAvgTwoSlice {

	public static void main(String[] args) {

	}

	public static int test() {
		int[] ar = { 4, 2, 2, 5, 1, 5, 8};
		int start = 0;
		int oldStart = 0;
		float oldAvg = (3 + 4) / 2;
		int oldSum = 3 + 4;
		float currentAvg = (3 + 4) / 2;
		int currentSum = 3 + 4;

		for (int i = 2; i < ar.length; i++) {
			if (ar[i] < currentAvg) {
				currentSum = currentSum + ar[i];
			} else {
				oldStart = start;
				oldAvg = currentAvg;
				oldSum = currentSum;
				start = i;
				currentSum = ar[i];
				currentAvg = ar[i];
			}
		}
		
		if (currentAvg > oldAvg){
			return oldStart;
		}
		
		return start;
	}

}
