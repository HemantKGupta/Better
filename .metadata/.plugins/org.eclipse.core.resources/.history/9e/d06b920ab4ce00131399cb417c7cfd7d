public class ReverseDLL {

	public static void main(String[] args) {
		DNode root = new DNode(1);
		root.next = new DNode(2);
		root.next.prev = root;
		root.next.next = new DNode(3);
		root.next.next.prev = root.next;
	}

	public static DNode reverse(DNode root) {
		DNode temp = null;
		DNode current = root;

		/*
		 * swap next and prev for all nodes of doubly linked list
		 */
		while (current != null) {
			temp = current.prev;
			current.prev = current.next;
			current.next = temp;
			current = current.prev;
		}

		/*
		 * Before changing head, check for the cases like empty list and list
		 * with only one node
		 */
		if (temp != null)
			root = temp.prev;
		return root;
	}
	public static void printDLL(DNode root) {
		DNode tmp = root;
		System.out.println("The list is: ");
		while (tmp != null) {
			System.out.print(tmp.data + ", ");
			tmp = tmp.next;
		}
		System.out.print("null\n");

	}

}
