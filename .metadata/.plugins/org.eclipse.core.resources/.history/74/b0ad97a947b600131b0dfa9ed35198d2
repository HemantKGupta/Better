
public class MajorityElement {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		int a[] = {1, 3, 3, 3, 2, 4, 5, 3, 2};
		printMajority(a, 5);
	}
	
	public static void printMajority(int[] a, int size)
	{
	  int cand = findCandidate(a, size);
	  if(isMajority(a, size, cand))
	    System.out.println(cand);
	  else
		  System.out.println("NO Majority Element");
	}
	
	/* Function to find the candidate for Majority */
	public static int findCandidate(int[] a, int size)
	{   
	    int maj_index = 0, count = 1;
	    int i;
	    for(i = 1; i < size; i++)
	    {
	        if(a[maj_index] == a[i]){
	            count++;
	            System.out.println("inside if"+count);
	        } 
	        else{
	            count--;
	            System.out.println("inside else"+count);
	        }
	        if(count == 0)
	        {
	            maj_index = i;
	            count=1;
	            System.out.println("count was 0, now maj_index:"+maj_index);
	        }
	    }
	    return a[maj_index];
	}
	  
	/* Function to check if the candidate occurs more than n/2 times */
	public static boolean isMajority(int a[], int size, int cand)
	{
	    int i, count = 0;
	    for (i = 0; i < size; i++)
	      if(a[i] == cand)
	         count++;
	    if (count > size/2)
	       return true;
	    else
	       return false;
	}

}
