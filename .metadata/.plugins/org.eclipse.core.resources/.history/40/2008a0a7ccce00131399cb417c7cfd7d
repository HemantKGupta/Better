public class DeleteGreaterNodes {

	public static void main(String[] args) {

	}

	// Deletes nodes which have greater value node on right side

	public static void deleteGreaterNodes(Node head_ref) {
		reverseList(head_ref);

		deleteLesserNodes(head_ref);

		reverseList(head_ref);
	}

	// Deletes nodes which have greater value node(s) on left side
	public static void deleteLesserNodes(Node head) {
		Node current = head;
		Node maxnode = head;
		Node temp;

		while (current != null && current.next != null) {
			/* If current is smaller than max, then delete current */
			if (current.next.data < maxnode.data) {
				temp = current.next;
				current.next = temp.next;
				temp = null;
			}
			// update max
			else {
				current = current.next;
				maxnode = current;
			}

		}
	}

	public static void reverseList(Node headref) {
		Node current = headref;
		Node prev = null;
		Node next;
		while (current != null) {
			next = current.next;
			current.next = prev;
			prev = current;
			current = next;
		}
		headref = prev;
	}

}
