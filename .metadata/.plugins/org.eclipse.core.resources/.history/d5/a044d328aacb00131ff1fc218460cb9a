
public class MyHeapSort {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	public void sort(int[] arr){
		int heapsize = arr.length;
		
        for (int k = heapsize/2; k >= 1; k--)
            sink(arr, k, heapsize);
        int index = heapsize;
        while (index > 0) {
            swap(arr, 0, index);
            index--;
            sink(arr, 0, index);
        }
	}
	
	public void sink(int[] arr, int i, int heapsize){
		int left = 2*i+1;
		int right = 2*i+2;
		int largest = i;
		if(left < heapsize && arr[left] > arr[i])
			largest = left;
		
		if(right < heapsize && arr[right] > largest)
			largest = right;
		
		if(largest!=i){
			swap(arr, i, largest);
			sink(arr, largest, heapsize);
		}
		
		
	}
	
	public static void swap(int[] arr, int i, int j){
		int temp = arr[i];
		arr[i] = arr[j];
		arr[j] = temp; 
	}
	

}
