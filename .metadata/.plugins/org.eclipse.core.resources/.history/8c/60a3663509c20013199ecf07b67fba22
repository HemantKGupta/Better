import java.util.Arrays;

public class MinAvgTwoSlice {

	public static void main(String[] args) {
		System.out.println(test());
	}

	public static int test() {
		//int[] ar = { 4, 2, 2, 5, 1, 5, 8};
		int[] ar = { 4, 2, 2, 5,  1,  5,  8    };
	  //int[] pr = { 0, 4, 6, 8, 13, 14, 15, 23}
		int len = ar.length;
		int[] prefixSum = prefixSum(ar);
		System.out.println(Arrays.toString(prefixSum));
		float minAvg = Float.MAX_VALUE;
		int start = 0;
		
		for (int i = 2; i <= len; i++) {
			System.out.println("For outer loop i: "+ i);
			for (int j = 0; j <= i-2; j++){
				System.out.println("For inner loop j: "+ j);
				float currAvg = (prefixSum[i]- prefixSum[j])/(i-j);
				System.out.println("currAvg: "+ currAvg);
				if (minAvg > currAvg ){
					start = j;
					minAvg = currAvg;
				}
				System.out.println("minAvg: "+ minAvg);
				System.out.println("start: "+ start);
			}
		}
		return start+1;
	}
	
	public static int[] prefixSum(int[] ar){
		int n = ar.length;
		int[] result = new int[n+1];
		
		result[0]= 0;
		for (int i = 0; i < n; i++) {
			result[i+1] = result[i]+ar[i];
		}
		
		return result;
	}

}
