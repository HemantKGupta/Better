
public class PartitionTest {

	public static void main(String[] args) {
		int[] A = {3,1,2,4,3};
		System.out.println(solution(A));
	}
	
	public static int solution(int A[]) {
		int sum = 0;
		for (int i = 0; i < A.length; i++) {
			sum +=A[i];
		}
		System.out.println("sum is: "+sum);
		int minDiff = Math.abs(sum-A[0]);
		int currentSum = A[0];
		/*System.out.println("minDiff is: "+minDiff);
		System.out.println("currentSum is: "+currentSum);*/
		for (int i = 1; i < A.length; i++) {
			currentSum += A[i];
			int remainSum = Math.abs(sum -currentSum);
			System.out.println("currentSum is: "+currentSum);
			System.out.println("currentDiff is: "+remainSum);
			if (minDiff > remainSum){
				minDiff = remainSum;
			}
			System.out.println("minDiff is: "+minDiff);		
		}
		return minDiff;
	   
	}

}
