
public class ConnectNodeAtSameLevel {

	public static void main(String[] args) {
		
	}
	
	public static void connectNodes (TBNode root){
		
		if (root == null)
			return;
		connectNodes(root.right);
		if (root.right != null){
			if( root.next!= null){		
				root.right.next = root.next.left;
			}else {
				root.right.next = null;
			}
		}
		root.left.next = root.right;
		connectNodes(root.left);
		if(root.left != null ){
			root.left.next = root.right;
		}
		
	}

}

class TBNode {
	int data;
	TBNode left;
	TBNode right;
	TBNode next;

	public TBNode(int data) {
		super();
		this.data = data;
		this.left = null;
		this.right = null;
		this.next = null;
	}

}
