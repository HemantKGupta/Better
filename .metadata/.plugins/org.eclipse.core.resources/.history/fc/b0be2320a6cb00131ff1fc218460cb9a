
public class HeapRS {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	

	 public static void sort(Comparable[] pq) {
	        int N = pq.length;
	        for (int k = N/2; k >= 1; k--)
	            sink(pq, k, N);
	        while (N > 1) {
	            exch(pq, 1, N--);
	            sink(pq, 1, N);
	        }
	    }

	    private static void sink(int[] arr, int k, int N) {
	        while (2*k <= N) {
	            int j = 2*k;
	            if (j < N && arr[j]< arr[j+1])) j++;
	            if (!less(arr, k, j)) break;
	            exch(arr, k, j);
	            k = j;
	        }
	    }

}
