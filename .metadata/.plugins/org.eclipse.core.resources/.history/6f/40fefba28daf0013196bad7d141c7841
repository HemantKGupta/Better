
public class CountInversions {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	public static int getInvCount(int arr[], int n)
	{
	  int inv_count = 0;
	  int i, j;
	 
	  for(i = 0; i < n - 1; i++)
	    for(j = i+1; j < n; j++)
	      if(arr[i] > arr[j])
	        inv_count++;
	 
	  return inv_count;
	}
	
}
