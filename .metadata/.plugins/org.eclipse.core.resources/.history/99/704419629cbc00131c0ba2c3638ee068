import java.util.Arrays;

public class CountSort {

	public static void main(String[] args) {
		int[] arr = { 2, 1, 0, 2, 4 };
		System.out.println("\nAfter sorting elemnets are: ");
		printArray(countSort(arr));
	}

	public static int[] countSort(int[] arrs) {
		
		int n = arrs.length;
		int[] output = new int[n];
		int[] count = new int[n+1];
		
		int i;
		for (i = 0; i < n; i++) {
			++count[arrs[i]];
		}

		for (i = 1; i <= n; i++)
			count[i] += count[i - 1];

		/*int j = 0;
		for (i = 0; i < n; i++)
			while (j < count[i])
				output[j++] = i;*/
		
		for (i = 0; i< n; ++i)
	    {
	        System.out.println("Loop var is: "+ i);
			int element = arrs[i];
			System.out.println("element is: "+ element);
	        int temp = count[element];
	        System.out.println("count[element] is: "+ temp);
	        temp = temp-1;
			output[temp] = element;
			System.out.println("output[temp-1] is set");
			System.out.println("count[element] is: "+count[element]);
	        --count[element];
	        System.out.println("after change count[element] is: "+count[element]);
	    }

		for (i = 0; i < n; ++i)
			arrs[i] = output[i];

		return output;
	}

	public static void printArray(int[] arr) {
		for (int i = 0; i < arr.length; i++) {
			System.out.print(arr[i]+" ");
		}
		System.out.println();
	}

}
