import java.util.Arrays;

public class MaxProfit {

	public static void main(String[] args) {
		int[] A = new int[6];
		A[0] = 23171;
		A[1] = 21011;
		A[2] = 21123;
		A[3] = 21366;
		A[4] = 21013;
		A[5] = 21367;
		System.out.println(solution(A));

	}

	public static int solution(int[] A) {
		int len = A.length;
		int diffSofar = A[1]-A[0];
		int min = A[0];
		for(int i = 1; i < len; i++){			
			int currDiff = A[i]-A[i-1];
			int diffMin = A[i]-min;
			int betterDiff =  currDiff >= diffMin ? currDiff : diffMin;
			if (betterDiff > diffSofar)
				diffSofar = betterDiff;
			if (A[i] < min){
				min = A[i];
			}
			
			
		  }
		
		return diffSofar;
	}

}
