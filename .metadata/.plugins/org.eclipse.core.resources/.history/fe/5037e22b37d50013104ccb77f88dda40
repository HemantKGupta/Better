
public class ConnectedComponentsUndirected {

	public static void main(String[] args) {
		Graph G = new Graph("tinyCG.txt");
		marked = new boolean[G.V()];
		
		if (count!= G.V())
			System.out.println("NOT connected");
		else
			System.out.println("connected");

	}
	
	public static boolean[] marked; // marked[v] = is there an s-v path?
	public static int count; // number of vertices connected to s
	
	// depth first search from v
	public static void connectedComponentsDFS(Graph G, int v) {
			count++;
			marked[v] = true;
			for (int w : G.adj(v)) {
				if (!marked[w]) {
					connectedComponentsDFS(G, w);
				}
			}
		}

}
