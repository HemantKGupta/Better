public class PatternSearch02_KMP {

	public static void main(String[] args) {
		/*char[] txt = "AABAACAADAABAAABAA".toCharArray();
		char[] pat = "AABA".toCharArray();
		KMPSearch(pat, txt);*/
		String s= "AABAAC";
		int l = s.length();
		computeLPSArray(s.toCharArray(),l, new int[l]);

	}

	public static void KMPSearch(char[] pat, char[] txt) {
		int M = pat.length;
		int N = txt.length;

		int[] lps = new int[M];
		int j = 0; // index for pat[]

		// Preprocess the pattern (calculate lps[] array)
		computeLPSArray(pat, M, lps);

		int i = 0; // index for txt[]
		while (i < N) {
			if (pat[j] == txt[i]) {
				j++;
				i++;
			}
			if (j == M) {
				System.out.printf("Found pattern at index %d \n", i - j);
				j = lps[j - 1];
			}
			// mismatch after j matches Do not match lps[0..lps[j-1]] characters
			else if (pat[j] != txt[i]) {
				if (j != 0)
					j = lps[j - 1];
				else
					i = i + 1;
			}
		}
	}

	public static void computeLPSArray(char[] pat, int M, int[] lps) {
		int len = 0;
		int i = 1;
		lps[0] = 0; // lps[0] is always 0
		
		while (i < M) {
			System.out.println(" i is: "+ i);
			System.out.println(" len is: "+ len);
			if (pat[i] == pat[len]) {
				System.out.println(" pat[i] is equal to pat[len] ");
				len++;
				lps[i] = len;
				i++;
				System.out.println(" lps[i] is set to "+lps[i]);
			} else {
				System.out.println(" pat[i] is not equal to pat[len] ");
				if (len != 0) {
					System.out.println("len is not zero : "+len);
					len = lps[len - 1];
				} else {
					lps[i] = 0;
					i++;
				}
			}
		}
	}

}
