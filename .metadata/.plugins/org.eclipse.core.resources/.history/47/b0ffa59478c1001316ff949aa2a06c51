import java.util.Arrays;


public class MaxCounters {

	public static void main(String[] args) {
		int[] A = {1,2,4, 1};
		System.out.println(Arrays.toString(solution(3,A)));
	}
	
	public static int[] solution(int N, int[] A) {
		int m = A.length;
		int[] counters = new int[N];
		
		for (int i = 0; i < m; i++) {
			
			if (A[i] <= N){
				counters[A[i]-1] = counters[A[i]-1] +1;
			}else if (A[i] == N+1){
				for (int j = 0; j < counters.length; j++) {
					counters[j]= getMaxCounter(counters);
				}
				
			}
		System.out.println("Counters at "+i+" th :"+Arrays.toString(counters) );	
		}
		return counters;
    }
	private static int getMaxCounter(int[] counters){
		int max = 0;
		for (int i = 0; i < counters.length; i++) {
			if(max < counters[i]){
				max= counters[i];
			}
		}
		return max;
	}

}
