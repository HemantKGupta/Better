import java.util.Arrays;


public class CountSort {

	public static void main(String[] args) {
		int[] arr  = {4,1,2,1,0};
		printArray(countSort(arr));
	}
	
	public static int[] countSort(int[] arrs)
	{
	  
	    int[] output = new int[arrs.length];
	 
	    // Create a count array to store count of inidividul ints and
	    // initialize count array as 0
	    int[] count= new int[256];
	    
	   
	 
	    // Store count of each int
	    int i;
	    for(i = 0; i< arrs.length; ++i){
	    	System.out.println("int at: "+ i+" is: "+arrs[i]);
	    	++count[arrs[i]];
	    }
	    System.out.println("count array: "+Arrays.toString(count));    
	 
	    // Change count[i] so that count[i] now contains actual position of
	    // this int in output array
	    for (i = 1; i <= 255; ++i)
	        count[i] += count[i-1];
	 
	    System.out.println("cumm count array: "+Arrays.toString(count));    
	    
	    // Build the output int array
	    for (i = 0; i< arrs.length; ++i)
	    {
	        output[count[arrs[i]]-1] = arrs[i];
	        --count[arrs[i]];
	    }
	 
	    // Copy the output array to arrs, so that arrs now
	    // contains sorted ints
	    for (i = 0; i< arrs.length; ++i)
	        arrs[i] = output[i];
	    
	    return output;
	}
	
	public static void printArray(int[] arr){
		System.out.println("");
		for (int i = 0; i < arr.length; i++) {
			System.out.print(" "+arr[i]);
		}
		
	}

}
