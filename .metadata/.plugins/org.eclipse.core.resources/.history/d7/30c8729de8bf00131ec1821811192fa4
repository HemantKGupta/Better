
public class WidthOfTree {

	public static void main(String[] args) {

	}
	
	public static void widthOfTree(BNode root){
		 int h = height(root);
		 for (int i = 1; i <= h; i++){
			 System.out.println("\nThe level "+ i+ " is : ");
			 printGivenLevel(root, i);
		 }
	}
	

	/* Print nodes at a given level */
	private static void widthOfGivenLevel(BNode root, int level, int width) {
		if (root == null)
			return;
		if (level == 1)
			width++;
		else if (level > 1) {
			printGivenLevel(root.left, level - 1);
			printGivenLevel(root.right, level - 1);
		}
	}
	
	/* Function to calculate height of a tree */
	public static int height(BNode root) {

		if (root == null) {
			return 0;
		}
		int lheight = height(root.left);
		int rheight = height(root.right);
		if (lheight > rheight) {
			return lheight + 1;
		} else
			return rheight + 1;
	}

}
