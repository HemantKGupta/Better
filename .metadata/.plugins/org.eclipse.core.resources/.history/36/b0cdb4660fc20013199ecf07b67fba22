
public class MinAvgTwoSlice2 {

	public static void main(String[] args) {
		double minAvg =
	}
	
	public static int solution(int[] A){
		int N = A.length;
		double minAvg = A[0]+A[1]/2;
		int minAvgStart = 0;
		
		for (int i=0; i < N-1;i++){
			double currAvg = (A[i]+ A[i+1])/2.0;
			if (minAvg > currAvg ){
				minAvg = currAvg;
				minAvgStart = i;
			}	
		} 
		for (int i=0; i < N-2;i++){
			double currAvg = (A[i]+ A[i+1]+A[i+2])/3.0;
			if (minAvg > currAvg ){
				minAvg = currAvg;
				minAvgStart = i;
			}	
		}
		
		
		
	}

}
